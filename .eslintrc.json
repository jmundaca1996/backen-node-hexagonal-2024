{
	"extends": [
		"./eslint.config.mjs",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"plugins": ["@typescript-eslint"],
	"ignorePatterns": ["./dist/**/*", "./node_modules/**/*"],
	"parserOptions": {
		"project": "./tsconfig.json"
	},
	"env": {
		"node": true,
		"jest": true
	},
	"rules": {
		"@typescript-eslint/no-unused-vars": "error",
		"no-unused-vars": "off"
	}
}
